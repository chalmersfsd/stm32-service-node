FROM ubuntu:18.04
RUN apt-get update && \
    apt-get install -y software-properties-common make && \
    add-apt-repository ppa:team-gcc-arm-embedded/ppa && \
    apt-get update && \
    apt-get install -y gcc-arm-none-eabi

VOLUME /sources
WORKDIR /sources

RUN echo "cd \$1 && make \$2" > /entrypoint.sh
ENTRYPOINT ["bash", "/entrypoint.sh"]
